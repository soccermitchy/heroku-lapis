#!/bin/sh
# bin/compile BUILD_DIR CACHE_DIR ENV_DIR

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3
ls /tmp/buildpacks/custom
echo "-----> Compiling lua"
cd /opt/src/lua
make
make install

echo "-----> Compiling openresty"
cd /opt/src/openresty
./configure
make
make install

echo "-----> Compiling luarocks"
cd /opt/src/luarocks
./configure
make
make install

cd $BUILD_DIR
echo "-----> Installing luarocks for app"
while read -r line; do
	echo "-----> Luarock: " $line
	luarocks install $line
done <<< $BUILD_DIR/app.rockspec
